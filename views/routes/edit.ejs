<%- include("../partials/header") %>


	<div class="row">
		<h1 style="text-align:center;">Edit <%= route.name %></h1>
		<div style="width:30%; margin: 25px auto;">
			<form action= "/routes/<%= route._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="route[name]" value="<%= route.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="route[price]" value="<%=route.price%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="route[image]" value="<%= route.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="route[description]" value="<%= route.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/routes">Go Back</a>
		</div>
	</div>	


<%- include("../partials/footer") %>