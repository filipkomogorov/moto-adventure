<%- include("../partials/header") %>


	<div class="row">
		<h1 style="text-align:center;">CREATE A NEW ROUTE</h1>
		<div style="width:30%; margin: 25px auto;">
			<form action= "/routes" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Adventure Title">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="Budget">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image url">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/routes">Go Back</a>
		</div>
	</div>	


<%- include("../partials/footer") %>